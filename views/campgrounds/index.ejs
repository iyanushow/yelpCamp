<%- include ('../partials/header.ejs') %>

    <header class="mt-5 jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp </h1>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
            <a href="/campgrounds/new" class="btn">
                Add New Camp Site
            </a>
        </div>
       
    </header>
    
    <div class="row text-center">
        <div class="col-lg-12">
            <h3>Our Best Camp Sites</h3>
        </div>
        <% campgrounds.forEach((camp) => { %>
            <div class="camp col-md-3 col-sm-6 py-4">
                <div class="card img-thumbnail">
                    <div class="camp-index">
                        <img src="<%= camp.image %>" alt="camp" class="img-fluid camp-index">
                    </div>
                    

                    <div class="caption pt-3">
                        <h4> <%= camp.name %></h4> 
                        <h6> $<%= camp.price %>/night</h6>
                    </div>

                    <p class="mb-1 mt-1">
                        <a href="/campgrounds/<%= camp._id %>" class="btn">More Info</a>
                    </p>
                </div>
                
                
            </div>   
        
        <% }) %>
    </div>
    
<%- include ('../partials/footer.ejs') %>



