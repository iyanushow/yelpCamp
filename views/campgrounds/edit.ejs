<%- include ('../partials/header') %>


    <div class="row">
        <h2 class="col-12">Edit <%= camp.name %> Campground</h2>
        <div class="formdiv">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="camp[name]">Camp Name </label>
                    <input class="form-control mb-3" type="text" name="camp[name]" id="campName" value="<%=camp.name %> " placeholder="<%=camp.name %>">
                    <label for="camp[price]">Price </label>
                    <input class="form-control" type="number" name="camp[price] " id="campPrice" value="<%=camp.price %>" min="0.1" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="camp[image]">image-url </label>
                    <input class="form-control" type="text" name="camp[image]" id="image" value="<%=camp.image %>">
                </div>
                <div class="form-group">
                    <label for="camp[description]"> Description </label>
                    <textarea name="camp[description]" rows="5"> <%= camp.body %> </textarea> 
                    
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-large btn-primary m-auto">Update Camp</button>
                </div>
                
                
                
            </form>
            <a href="/campgrounds/<%= camp._id %>" class="back mb-3">Go Back!</a>
        </div>
    </div>




<%- include ('../partials/footer.ejs') %>