<%- include ('../partials/header') %>


    <div class="row">
        <h2 class="col-12">Add a new Campground</h2>
        <div class="formdiv">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    
                    <input class="form-control mb-3" type="text" name="campName" id="campName" placeholder="Camp Name">
                    
                    <input class="form-control" id="campPrice" type="number" name="campPrice"  placeholder="Camp Price per Night" min="0.1" step="0.01">
                </div>
               
                <div class="form-group">
                    <input class="form-control" type="text" name="imageUrl" id="" placeholder="image-url">
                </div>
                <div class="form-group">
                    
                    <textarea name="campInfo" class="form-control" rows="5" placeholder="description" ></textarea> 
                    
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-large btn-primary m-auto">Add Camp</button>
                </div>
                
                
                
            </form>
            <a href="/campgrounds" class="back mb-3">Go Back!</a>
        </div>
    </div>

